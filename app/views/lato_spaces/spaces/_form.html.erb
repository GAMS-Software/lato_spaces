<%= turbo_frame_tag dom_id(space, 'form') do %>
  <%= form_with model: space, url: space.persisted? ? lato_spaces.space_path(space) : lato_spaces.spaces_path, data: { turbo_frame: '_self', controller: 'lato-form' } do |form| %>
    <%= lato_form_notices class: %w[mb-3] %>
    <%= lato_form_errors space, class: %w[mb-3] %>

    <div class="mb-3">
      <%= lato_form_item_label form, :name %>
      <%= lato_form_item_input_text form, :name, required: true %>
    </div>

    <div class="d-flex justify-content-end">
      <%= lato_form_submit form, space.persisted? ? 'Update' : 'Confirm', class: %w[btn-success] %>
    </div>
  <% end %>
<% end %>