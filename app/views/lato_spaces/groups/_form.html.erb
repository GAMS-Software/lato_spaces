<%= turbo_frame_tag dom_id(group, 'form') do %>
  <%= form_with model: group, url: group.persisted? ? lato_spaces.groups_update_action_path(group) : lato_spaces.groups_create_action_path, data: { turbo_frame: '_self', controller: 'lato-form' } do |form| %>
    <%= lato_form_notices class: %w[mb-3] %>
    <%= lato_form_errors group, class: %w[mb-3] %>

    <div class="mb-3">
      <%= lato_form_item_label form, :name %>
      <%= lato_form_item_input_text form, :name, required: true %>
    </div>

    <%= render 'layouts/lato_spaces/group-form-extra_content', form: form %>

    <div class="d-flex justify-content-end">
      <%= lato_form_submit form, group.persisted? ? I18n.t('lato_spaces.cta_update') : I18n.t('lato_spaces.cta_confirm'), class: %w[btn-success] %>
    </div>
  <% end %>
<% end %>