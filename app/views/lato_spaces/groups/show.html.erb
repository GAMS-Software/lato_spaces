<%= lato_page_head @group.name, [
  { label: 'Spaces', path: lato_spaces.root_path },
  { label: 'Groups', path: lato_spaces.groups_path }
] %>

<div class="card mb-4">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h2 class="fs-4 mb-0">Group informations</h2>
    <div class="btn-group btn-group-sm" role="group">
      <%= link_to 'Edit', lato_spaces.groups_update_path(@group), class: 'btn btn-primary', data: { lato_action_target: 'trigger', turbo_frame: dom_id(@group, 'form'), action_title: 'Edit group' } %>
      <%= link_to 'Delete', lato_spaces.groups_destroy_action_path(@group), class: 'btn btn-danger', data: { turbo_confirm: 'Are you sure?', turbo_method: :delete } %>
    </div>
  </div>
  <div class="card-body">
    ...
  </div>
</div>

<div class="card mb-4">
  <div class="card-header">
    <h2 class="fs-4 mb-0">Group memberships</h2>
  </div>
  <div class="card-body">
    <%= lato_index @memberships,
      custom_actions: {
        create: {
          path: lato_spaces.memberships_create_path(@group),
          icon: 'bi bi-plus',
          data: { lato_action_target: 'trigger', turbo_frame: dom_id(LatoSpaces::Membership.new, 'form'), action_title: 'New membership' }
        }
      }
    %>
  </div>
</div>